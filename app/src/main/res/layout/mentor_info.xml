<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menname"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:text="Hii"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/departmentname"
        android:textSize="20dp"
        android:text="Hi"
        android:layout_below="@+id/menname"
        android:layout_marginLeft="20dp"
        android:padding="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emaill"
        android:textSize="20dp"
        android:text="Hi"
        android:layout_below="@+id/departmentname"
        android:layout_marginLeft="20dp"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/menskill1"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_below="@id/emaill"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/menskill2"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_below="@+id/emaill"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/menskill3"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="dsad"
        android:layout_below="@+id/menskill2"
     />
    <TextView
        android:id="@+id/menskill4"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="dsad"
        android:layout_below="@+id/menskill2"
        android:layout_alignParentEnd="true"
        />







</RelativeLayout>