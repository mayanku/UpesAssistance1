<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyActivity">


    <Button
        android:id="@+id/projectciew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rounded_button"
        android:padding="20dp"
        android:text="Check Projects" />

    <Button
        android:id="@+id/groupchats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectciew"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rounded_button_green"
        android:padding="20dp"
        android:text="Enter group chats" />

    <Button
        android:id="@+id/events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupchats"
        android:layout_marginTop="55dp"
        android:background="@drawable/rounded_button_register"
        android:padding="20dp"
        android:text="Event news" />

    <Button
        android:id="@+id/mento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events"
        android:layout_marginTop="55dp"
        android:background="@drawable/rounded_button_register"
        android:padding="20dp"
        android:text="Mentor List" />

    <Button
        android:id="@+id/buttonlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mento"/>


</RelativeLayout>