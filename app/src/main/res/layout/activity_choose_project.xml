<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueg"
    tools:context=".ChooseProjectActivity">

    <Button
        android:id="@+id/academicproject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:text="Academic Projects"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/learningproject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/academicproject"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:text="Learning Projects"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />



</RelativeLayout>