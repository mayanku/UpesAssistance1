<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#091E9B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Project Details"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/textView15"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/textViewtitle"
        android:layout_marginTop="120dp"
        android:text="title display"
        android:textColor="#ffff"
        android:textSize="20sp"
         />


    <TextView
        android:id="@+id/textViewtAbstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/tit"
        android:text="Abstract"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/abstracta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtAbstract"
        android:layout_alignStart="@+id/tit"
        android:layout_marginTop="10dp"
        android:text="abstract display"
        android:textColor="#ffff"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/textViewtMentor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/abstracta"
        android:text="Mentor"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/mentor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abstracta"
        android:layout_alignStart="@+id/abstracta"
        android:layout_marginTop="36dp"
        android:text="mentor name"
        android:textColor="#ffff"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Skills required in this project"
        android:layout_below="@+id/mentor"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/skk_2"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_alignStart="@+id/mentor"
        android:layout_marginTop="25dp"
        android:text="skill1"
        android:textColor="#ffff"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/skk_1"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/skk_2"
        android:text="skill2"
        android:textColor="#ffff"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/skk_3"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skk_2"
        android:layout_alignStart="@+id/mentor"
        android:layout_marginTop="25dp"
        android:text="skill3"
        android:textColor="#ffff"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/skk_4"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skk_2"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/skk_3"
        android:text="skill4"
        android:textColor="#ffff"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skk_3"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="CREATOR:"/>

    <TextView
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skk_3"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/cr"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="18sp"

        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:text="CREATOR">

    </TextView>

    <TextView
        android:id="@+id/cri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cr"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="No. Of Person Required:"/>
    <TextView
        android:id="@+id/personrequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/cri"
        android:layout_below="@+id/creator"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cri"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button_green"
        android:text="Join This Project"
         />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>