<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueg"
    tools:context=".StudentRegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:inputType="textPersonName"
                android:hint="Enter Your Name..."
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                android:background="@drawable/input"
                android:padding="4dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"/>
            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/register_name"
                android:inputType="textEmailAddress"
                android:hint="Email..."
                android:textColor="#ffff"
                android:background="@drawable/input"
                android:padding="4dp"
                android:drawableStart="@drawable/email"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColorHint="#ffff"/>
            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/register_email"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColor="#ffff"
                android:background="@drawable/input"
                android:padding="4dp"
                android:drawableStart="@drawable/password"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColorHint="#ffff"/>
            <EditText
                android:id="@+id/SAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/register_password"
                android:inputType="number"
                android:hint="Enter SAP ID"
                android:background="@drawable/input"
                android:padding="4dp"
                android:textColor="#ffff"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColorHint="#ffff"/>

            <EditText
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/SAP"
                android:inputType="text"
                android:textColor="#ffff"
                android:hint="Enter your Branch"
                android:background="@drawable/input"
                android:padding="4dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColorHint="#ffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:id="@+id/year"
                android:text="Year Of Study"
                android:padding="4dp"

                android:layout_alignParentStart="true"
                android:layout_below="@id/branch"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:id="@+id/year_spinner"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:layout_below="@+id/branch"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp">



            </Spinner>

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:background="@drawable/button"
                android:textColor="@android:color/background_light"
                />
            <TextView
                android:id="@+id/already_have_account_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/register_button"
                android:text="Already have account"
                android:layout_marginTop="2dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"/>




        </RelativeLayout>
    </ScrollView>

</RelativeLayout>